// sistema-academia/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enums para asegurar consistencia en los datos
enum Role {
  ADMIN
  ALUMNO
}

enum TipoRecurso {
  AULA
  CABINA
  INSTRUMENTO
}

//Modelos
model Academia {
  id       Int       @id @default(autoincrement())
  nombre   String
  usuarios Usuario[]
  recursos Recurso[]
  reservas Reserva[]
}

model Usuario {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  nombre     String
  rol        Role     @default(ALUMNO)
  
  academiaId Int
  academia   Academia @relation(fields: [academiaId], references: [id], onDelete: Cascade)
  
  reservas   Reserva[]
}

model Recurso {
  id         Int         @id @default(autoincrement())
  nombre     String
  tipo       TipoRecurso
  capacidad  Int         @default(1)
  
  academiaId Int
  academia   Academia    @relation(fields: [academiaId], references: [id], onDelete: Cascade)
  
  reservas   Reserva[]
}

model Reserva {
  id         Int      @id @default(autoincrement())
  inicio     DateTime
  fin        DateTime
  createdAt  DateTime @default(now())

  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  recursoId  Int
  recurso    Recurso  @relation(fields: [recursoId], references: [id], onDelete: Cascade)
  
  academiaId Int
  academia   Academia @relation(fields: [academiaId], references: [id], onDelete: Cascade)

  // Índices para optimizar las búsquedas de disponibilidad
  @@index([recursoId, inicio, fin])
  @@index([usuarioId])
  @@index([academiaId])
}