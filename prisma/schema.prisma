// prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Academia {
  id        Int      @id @default(autoincrement())
  nombre    String
  usuarios  Usuario[]
  recursos  Recurso[]
  reservas  Reserva[]
}

model Usuario {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String   
  nombre     String
  rol        String   // "ADMIN", "PROFE", "ALUMNO"
  academiaId Int
  academia   Academia @relation(fields: [academiaId], references: [id])
  reservas   Reserva[]
}

model Recurso {
  id         Int      @id @default(autoincrement())
  nombre     String   
  tipo       String   // "Aula", "cabina" o "INSTRUMENTO"
  capacidad   Int      @default(0)
  academiaId Int
  academia   Academia @relation(fields: [academiaId], references: [id])
  reservas   Reserva[]
}

model Reserva {
  id         Int      @id @default(autoincrement())
  inicio     DateTime
  fin        DateTime
  createdAt  DateTime @default(now()) // Auditoría

  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  
  recursoId  Int
  recurso    Recurso  @relation(fields: [recursoId], references: [id])
  
  academiaId Int
  academia   Academia @relation(fields: [academiaId], references: [id])

  // Índices para velocidad de consulta
  @@index([recursoId])
  @@index([usuarioId])
  @@index([academiaId])
}